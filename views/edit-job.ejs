<h2>Edit Job</h2>

<form method="POST" action="/edit-job/<%= job._id %>">
  <input name="title" value="<%= job.title %>" placeholder="Job Title" required /><br>
  <input name="company" value="<%= job.company %>" placeholder="Company" required /><br>
  <input name="location" value="<%= job.location %>" placeholder="Location" required /><br>
  <input name="type" value="<%= job.type %>" placeholder="Job Type" required /><br>
  <textarea name="description" placeholder="Description" required><%= job.description %></textarea><br>
  <input name="applyLink" value="<%= job.applyLink %>" placeholder="Apply Link" required /><br>
  <button type="submit">Update Job</button>
</form>
